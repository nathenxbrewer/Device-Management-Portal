    <MudItem xs="12" sm="12" md="12">
        <MudCard  Style="height:100%;">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Active Alarms</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent Class="px-0">
                <MudList Clickable="true">
                    @if (Alarms.Count() > 0)
                   {

                    @foreach (var alarm in Alarms)
                    {
                     <MudListItem OnClick="(() => NavigateAlarm(alarm))">
                        <div class="d-flex flex-row">
                            <MudAvatar Class="mud-elevation-25">
                                <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mx-4" />
                            </MudAvatar>
                            <div class="ml-6">
                                <MudText Typo="Typo.subtitle2">@alarm.alarmTypeName</MudText>
                                <MudText Typo="Typo.body2">@alarm.message</MudText>
                            </div>
                                @{
                                    switch (@alarm.severityId)
                                    {
                                        case 1:
                                        <MudChip Label="true" Color="Color.Error" Size="Size.Small" Class="ml-auto mud-elevation-25">High</MudChip>
                                        break;
                                        case 2:
                                        <MudChip Label="true" Color="Color.Warning" Size="Size.Small" Class="ml-auto mud-elevation-25">Medium</MudChip>
                                        break;
                                        case 3:
                                        <MudChip Label="true" Color="Color.Success" Size="Size.Small" Class="ml-auto mud-elevation-25">Low</MudChip>
                                        break;
                                    }
                                 }
                            
                        </div>
                    </MudListItem>   
                    }

                }
                else
                {
                        <MudText Class="ma-4" Typo="@Typo.body1">No data to display.</MudText>

                }
            </MudList>
            </MudCardContent>
        </MudCard>
    </MudItem>
